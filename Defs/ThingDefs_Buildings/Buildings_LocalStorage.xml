<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>Nexora_LocalStorage</defName>
        <thingClass>Nexora.buildings.Building_LocalStorage</thingClass>
        <label>Dense Storage</label>
        <description>一个可以插多块存储设备的硬盘驱动器</description>
        <graphicData>
            <texPath>Things/LocalStorage2x4</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <designationCategory>Nexora</designationCategory>
        <rotatable>true</rotatable>
        <altitudeLayer>Building</altitudeLayer>

        <size>(1,1)</size>
        <category>Building</category>
        <thingCategories>
            <li>Buildings</li>
        </thingCategories>
        <minifiedDef>MinifiedThing</minifiedDef>
        <passability>PassThroughOnly</passability>
        <pathCost>0</pathCost>
        <fillPercent>0.1</fillPercent>
        <statBases>
            <MaxHitPoints>1000</MaxHitPoints>
            <WorkToBuild>800</WorkToBuild>
            <Mass>8</Mass>
            <Flammability>0.0</Flammability>
            <Beauty>0.5</Beauty>
        </statBases>
        <costList>
            <Steel>200</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <building>
            <relatedBuildCommands>
                <li>Nexora_AccessInterface</li>
            </relatedBuildCommands>
        </building>
        <tickerType>Long</tickerType>
        
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>2</glowRadius>
                <glowColor>(125, 245, 237, 0)</glowColor>
            </li>

            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>50</basePowerConsumption>
            </li>
            <li Class="Nexora.comp.CompProperties_DataFormat">
                <compClass>Nexora.comp.CompDataFormatMassFormat</compClass>
                <value>1000</value>
            </li>
        </comps>
    </ThingDef>

</Defs>